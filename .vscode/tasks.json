{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Flutter Web",
            "type": "shell",
            "command": "flutter run -d chrome",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "dart",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Launching lib/main.dart",
                    "endsPattern": "To hot restart changes"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "label": "Flutter Web"
            }
        },
        {
            "label": "Run .NET API",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/backend/src/Solver.Api"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "dotnet",
                "pattern": {
                    "regexp": "^(.*)\\((\\d+),(\\d+)\\):\\s+(error|warning)\\s+\\w+:\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Building\\.\\.\\.",
                    "endsPattern": "Now listening on:"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "label": ".NET API"
            }
        }
    ]
}
