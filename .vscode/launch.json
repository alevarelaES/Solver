{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Web",
            "request": "launch",
            "type": "dart",
            "args": ["-d", "chrome"]
        },
        {
            "name": ".NET API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Run .NET API",
            "program": "${workspaceFolder}/backend/src/Solver.Api/bin/Debug/net10.0/Solver.Api.dll",
            "cwd": "${workspaceFolder}/backend/src/Solver.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Flutter + API)",
            "configurations": ["Flutter Web", ".NET API"],
            "stopAll": true
        }
    ]
}
